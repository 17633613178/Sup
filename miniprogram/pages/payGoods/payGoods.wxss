Page{
    background-color: #DCDCDC;
}
.lacation{
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: white;
    padding: 20rpx;
    margin: 10rpx 20rpx;
    border-radius: 30rpx;
  
}
.lacation-item{
    font-size: 12pt;
    margin-left: 20rpx;
}
.item-image{
    width: 180rpx;
    height: 180rpx;
}
.item{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    
    padding: 30rpx;
    
}
.list{
    background-color: white;
    padding: 20rpx;
    margin: 20rpx 20rpx;
    border-radius: 20rpx;
}
.item-left{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.item-name{
    margin-left: 60rpx;
    font-size: 10pt;
}
.item-prize-number{
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 50rpx;
}
.prize{
    color: red;
}
.number{
    color: #7f7f7f;
    font-size: 9pt;
}
.choose{
    border-bottom: 2rpx solid gray;
}
.all-money{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.submit{
    position: fixed;
    width: 100%;
    bottom: 0;
    background-color: white;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 120rpx;
    padding: 20rpx;
}
.submit-word{
    background-color:#FF4500 ;
    font-weight: bold;
    color: white;
    padding: 20rpx 40rpx;
    text-align: center;
    margin-top: 20rpx;
    border-radius: 20rpx;
    margin-right: 40rpx;
}
.content{
    margin-bottom: 190rpx;
}