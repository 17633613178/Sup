swiper{
  width: 100%;
  height: 380rpx;

}
swiper image{
  width: 100%;
  border-radius: 20rpx;
}
.all_goods{
  display: grid;
  grid-template-columns: repeat(2,1fr);
  grid-gap: 20rpx;
}

.ev_goods{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
}
.goods_image{
  border-radius: 30rpx;
  width: 100%;

}

.bottom{
  display: flex;
  flex-direction: row;
  
  justify-content: space-around;
}
.shopcarimage{
  width: 40rpx;
  height: 40rpx;
}
.prize{
  color: red;
  align-self: flex-start;
}
.item_goods{
  background-color: white;
  border-radius: 23rpx;

}
